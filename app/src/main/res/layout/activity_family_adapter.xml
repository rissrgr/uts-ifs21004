<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageViewFamily"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fam1"
            android:scaleType="centerCrop"
            android:contentDescription="Family Image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">


            <TextView
                android:id="@+id/textViewFamilyDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maiasaura Description"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textViewDinosaur1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinosaur 1"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/textViewDinosaur2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinosaur 2"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
